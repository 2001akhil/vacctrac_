<body>
    <div class="contents">
        <h1>LOGIN</h1>
        <form action="/cust_login" method="POST">
            <table>
                <tr>
                    <td>
                        <label for="email">
                            <h4 class="ab">Username</h4>
                        </label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="fields">
                            <input type="text" name="email" id="usn">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label for="password">
                            <h4 class="bc">Password</h4>
                        </label></td>
                </tr>
                <tr>
                    <td>
                        <div class="fields">
                            <input type="password" name="password" id="pass">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </table>
            <div><button type="submit" id="login-button">Login</button></div>
        </form>
    </div>
</body>